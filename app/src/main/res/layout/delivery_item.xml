<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/definite_dimen_10"
    android:background="@drawable/rounded_white_button"
    android:layout_marginStart="@dimen/definite_dimen_18"
    android:layout_marginEnd="@dimen/definite_dimen_18">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/definite_dimen_20"

        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvNameOfCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/yeonsung_regular"
            android:text="Customer Name"
            android:textSize="@dimen/text_size_xxnormal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/cardView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/definite_dimen_6"/>

        <TextView
            android:id="@+id/tvNameOfRestaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment"
            android:textColor="@color/grey2"
            android:textSize="@dimen/text_size_normal"
            android:layout_marginTop="@dimen/definite_dimen_6"
            android:layout_marginBottom="@dimen/definite_dimen_6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/cardView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Not Received "
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_huge"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/definite_dimen_6"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/definite_dimen_10"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/quantitiesTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/definite_dimen_10"
                android:layout_marginEnd="@dimen/definite_dimen_10"
                android:text="Delivered" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/imgStatus"
            android:layout_width="@dimen/definite_dimen_30"
            android:layout_height="@dimen/definite_dimen_30"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/definite_dimen_8"
            app:cardCornerRadius="@dimen/definite_dimen_10"
            android:backgroundTint="@color/green" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>